{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "esnext",
        "target": "esnext",
        "lib": [
            "es2018",
            "dom"
        ],
        "sourceMap": true,
        "allowJs": true,
        "strict": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "config",
        "dist",
        "scripts",
        "postcss.config.js"
    ],
    "types": [
        "typePatches"
    ]
}